@page "/"

<PageTitle>EstiTracker</PageTitle>

<h1>Welcome to EstiTracker</h1>

@if (estimates is null)
{
    <p><em>Loading...</em></p>
}

else
{
    <table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
        <th>Id</th>
        <th>Customer</th>
        <th>Job Type</th>
        <th>Date Created</th>
        <th>Date Update</th>
        <th>Rush</th>
        <th></th>
    </thead>
    <tbody>
        @foreach (var estimate in estimates)
        {
            <tr>
                <td>@estimate.Id</td>
                <td>@estimate.Customer</td>
                <td>@estimate.JobType</td>
                <td>@estimate.DateCreated</td>
                <td>@estimate.DateUpdated</td>
                <td>@estimate.IsRush</td>
                <td></td>
            </tr>
        }
    </tbody>

</table>
}

@code
{
   private Estimate[]? estimates;

   protected override void OnInitialized()
   {
       estimates = EstimateService.GetEstimates();
   }
}

